<div class="ui row">
  <div class="ui column">
    {{x-select
      model=model
      labelKey="Nombre"
      valueKey="Id"
      placeholder="Seleccione un serie ..."
      onSelect=(action 'select')}}
  </div>
</div>
<div class="ui row">
  <div class="ui column">
    {{#if loading}}
      <div class="ui active inverted dimmer">
        <div class="ui text loader">Loading</div>
      </div>
    {{/if}}
    {{#if capitulos}}
      {{select-capitulos
        name="capitulos"
        capitulos=capitulos
        selectCapitulo=(action 'selectCapitulo')}}
    {{/if}}
  </div>
</div>

<div class="ui row">
  <div class="ui column">
    {{#if subCapitulos}}
      {{x-select
        model=subCapitulos
        labelKey="Nombre"
        valueKey="Id"
        placeholder="Seleccione ..."
        onSelect=(action 'selectCapitulo')}}
    {{/if}}
  </div>
</div>

{{#if tables}}
  <hr />
  {{select-capitulos
    name="tables"
    capitulos=tables
    selectCapitulo=(action 'showButton')}}
{{/if}}

{{#if showButton}}
  <button class="ui button" {{action "loadDataTable"}}>Generate</button>
{{/if}}
